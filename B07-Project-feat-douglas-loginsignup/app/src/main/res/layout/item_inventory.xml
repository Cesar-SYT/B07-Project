<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 药品 1 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/medicineCard1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/medicineCard2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtMedName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inhaler"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtAmount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtPurchase1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased: 2025-01-01"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMedName1" />

            <TextView
                android:id="@+id/txtExpiry1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry: 2025-02-01"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtPurchase1" />

            <Button
                android:id="@+id/btnAdd1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtAmount1" />

            <Button
                android:id="@+id/btnSubtract1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                app:layout_constraintEnd_toStartOf="@id/btnAdd1"
                app:layout_constraintTop_toBottomOf="@id/txtAmount1" />

            <TextView
                android:id="@+id/txtWarning1"
                android:text="⚠ LOW / EXPIRED"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtExpiry1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 药品 2（复制药品块） -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/medicineCard2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medicineCard1">

            <TextView
                android:id="@+id/txtMedName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin D"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtAmount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtPurchase2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased: 2025-02-01"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMedName2" />

            <TextView
                android:id="@+id/txtExpiry2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry: 2025-04-01"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtPurchase2" />

            <Button
                android:id="@+id/btnAdd2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtAmount2" />

            <Button
                android:id="@+id/btnSubtract2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                app:layout_constraintEnd_toStartOf="@id/btnAdd2"
                app:layout_constraintTop_toBottomOf="@id/txtAmount2" />

            <TextView
                android:id="@+id/txtWarning2"
                android:text="⚠ LOW / EXPIRED"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtExpiry2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- 添加药品按钮 -->
        <Button
            android:id="@+id/btnAddMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Medicine"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/medicineCard2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>