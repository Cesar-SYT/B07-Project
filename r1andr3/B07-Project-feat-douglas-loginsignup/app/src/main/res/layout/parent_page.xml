<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentHomeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".ParentHomeActivity">

<LinearLayout
        android:id="@+id/parentTopBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ECEFF1"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollParentHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtParentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SMART AIR â€“ Parent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCurrentChildName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Child: Alex"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerChildSelector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollParentHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/parentTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/parentContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/cardZoneParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_neutral"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtZoneParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today: Green Zone"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardRescueSummaryParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_neutral"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtRescueSummaryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rescue Inhaler"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtRescueLastUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Last: "
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtRescueThisWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="This week: "
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardControllerSummaryParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_neutral"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtControllerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Controller Adherence"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtControllerToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Today: "
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtControllerWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="This week: "
                    android:textSize="14sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/cardTrendParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_neutral"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtTrendTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trend (Last 7 days)"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:id="@+id/rgTrendRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb7days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7d"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/rb30days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30d"/>
                    </RadioGroup>
                </LinearLayout>

                <View
                    android:id="@+id/viewTrendPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:background="#CFD8DC"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtNotificationsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>


            <LinearLayout
                android:id="@+id/parentQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnAddLogParent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Add Log"/>

                <Button
                    android:id="@+id/btnViewReportParent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Report"/>

                <Button
                    android:id="@+id/btnSharingSettingsParent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Sharing"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
