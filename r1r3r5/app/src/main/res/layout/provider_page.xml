<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/providerHomeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ProviderHomeActivity">

    <LinearLayout
        android:id="@+id/providerTopBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#ECEFF1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtProviderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SMART AIR â€“ Provider"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnProviderSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>

        <!-- To-Do 4: Display Provider ID -->
        <TextView
            android:id="@+id/txtProviderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Provider ID: Loading..."
            android:textColor="#1976D2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"/>

        <Spinner
            android:id="@+id/spinnerPatientSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:entries="@array/dummy_children"/>
            
        <Button
            android:id="@+id/btnLinkPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link Patient via Code"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollProviderHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/providerTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/providerContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/cardRescueOverviewProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_neutral"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtRescueOverviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rescue Frequency (Last 30 days)"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <com.example.smartair.views.SimpleLineChart
                    android:id="@+id/viewRescueChart"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:background="#FAFAFA"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardControllerOverviewProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_neutral"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtControllerOverviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Controller Adherence"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtAdherenceSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading adherence..."
                    android:layout_marginTop="8dp"/>

                <View
                    android:id="@+id/viewControllerChartPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:background="#CFD8DC"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardSymptomsTriggersProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_neutral"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtSymptomsTitleProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Symptoms &amp; Triggers"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtSymptomsSummaryProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Symptom days: "
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtTopTriggersProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Top triggers: "
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardZoneDistributionProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_neutral"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txtZoneDistributionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zone Distribution"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/viewZoneDistributionChartPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:background="#CFD8DC"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtRecentEventsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Critical Events"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/listRecentEventsProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txtEventSample1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text=" "
                    android:textSize="14sp"
                    android:background="#FFEBEE"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnExportReportProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export Report (PDF / CSV)"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
