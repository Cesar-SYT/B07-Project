<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTitleDailyCheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daily Check"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <CheckBox
        android:id="@+id/chkNightWaking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Night waking"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txtTitleDailyCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <CheckBox
        android:id="@+id/chkActivityLimit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Activity limitation"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/chkNightWaking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <CheckBox
        android:id="@+id/chkCoughWheeze"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cough / Wheeze"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/chkActivityLimit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <RadioGroup
        android:id="@+id/radioRecorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/chkCoughWheeze"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbChild"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Child"
            android:textSize="16sp"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/rbParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Parent"
            android:textSize="16sp"
            android:gravity="center"/>

    </RadioGroup>


    <Button
        android:id="@+id/btnSubmitDailyCheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioRecorder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
