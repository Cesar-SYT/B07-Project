<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TriageDetail">

    <!-- Pinned Emergency Button (Initially Gone) -->
    <Button
        android:id="@+id/btnEmergencyTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALL EMERGENCY NOW"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnEmergencyTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One-tap Triage"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:gravity="center"/>

            <!-- Timer Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/timerTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="09:59"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"/>

                    <Button
                        android:id="@+id/btnResetTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Critical Signs Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Critical Signs (Check all that apply)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:id="@+id/cbCantSpeak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can't speak full sentences"
                android:textSize="16sp"
                android:buttonTint="#D32F2F"/>

            <CheckBox
                android:id="@+id/cbChestPulling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chest pulling"
                android:textSize="16sp"
                android:buttonTint="#D32F2F"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="16dp"/>

            <!-- Assessment Questions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assessment"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <!-- Q1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Emergency visits in last week:"
                android:textStyle="bold"/>

            <NumberPicker
                android:id="@+id/npEmergencyVisits"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <!-- Q2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Emergency Type:"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinnerEmergencyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:spinnerMode="dropdown"/>

            <!-- Q3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Current PEF:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etCurrentPEF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Enter value (Optional)"/>

            <!-- Q4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Symptom Duration:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spinnerSymptomDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:spinnerMode="dropdown"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="24dp"/>

            <!-- Dynamic Decision Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCallEmergencyBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call Emergency Now"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnHomeSteps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Home Steps for controllable symptoms (shows zone-aligned steps from the action plan)"
                    android:backgroundTint="#388E3C"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:padding="16dp"/>
            </LinearLayout>

            <!-- Spacing at bottom -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>