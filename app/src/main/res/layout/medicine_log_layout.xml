<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <View
        android:id="@+id/colorDot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/circle_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/logTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2025-11-30 04:54"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/colorDot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/logType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RESCUE"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/logTime"
        app:layout_constraintEnd_toEndOf="@id/logTime"
        app:layout_constraintTop_toBottomOf="@id/logTime"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/logDose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dose: 1 puffs\nBreath: 2/5, Feel: Same"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/logTime"
        app:layout_constraintEnd_toEndOf="@id/logTime"
        app:layout_constraintTop_toBottomOf="@id/logType"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/logExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breath: 2/5, Feel: Same"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/logTime"
        app:layout_constraintTop_toBottomOf="@id/logDose"/>


</androidx.constraintlayout.widget.ConstraintLayout>
