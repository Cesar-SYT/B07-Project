<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.symptoms.ExportReportFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Report"
        android:textAppearance="?attr/textAppearanceHeadline5" />

    <!-- 格式选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Choose Export Type"
        android:textAppearance="?attr/textAppearanceSubtitle1" />

    <RadioGroup
        android:id="@+id/radio_group_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="PDF" />
        <RadioButton
            android:id="@+id/radio_csv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSV" />
    </RadioGroup>

    <!-- 日期范围选择 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/menu_layout_date_range"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Dates">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Past 30 Days"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 包含内容选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="What to include"
        android:textAppearance="?attr/textAppearanceSubtitle1" />

    <CheckBox
        android:id="@+id/checkbox_include_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Symptom Details" />
    <CheckBox
        android:id="@+id/checkbox_include_triggers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Triggers" />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/button_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:text="Print Report"
        android:textSize="18sp"/>

</LinearLayout>
