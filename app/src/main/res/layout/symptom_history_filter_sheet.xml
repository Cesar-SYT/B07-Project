<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Filter By Symptom" style="?attr/textAppearanceSubtitle1"/>
    <CheckBox android:id="@+id/filter_symptom_sleep" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Night Waking"/>
    <CheckBox android:id="@+id/filter_symptom_activity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Activity Limits"/>
    <CheckBox android:id="@+id/filter_symptom_cough" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cough / Wheeze"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Filter By Trigger" style="?attr/textAppearanceSubtitle1" android:layout_marginTop="16dp"/>
    <CheckBox android:id="@+id/filter_trigger_exercise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Exercise"/>
    <CheckBox android:id="@+id/filter_trigger_coldair" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cold air"/>
    <CheckBox android:id="@+id/filter_trigger_pets" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pets"/>
    <CheckBox android:id="@+id/filter_trigger_smoke" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Smoke"/>
    <CheckBox android:id="@+id/filter_trigger_illness" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Illness"/>
    <CheckBox android:id="@+id/filter_trigger_perfume" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Perfume/cleaners/strong odors"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Filter By Author" style="?attr/textAppearanceSubtitle1" android:layout_marginTop="16dp"/>
    <CheckBox android:id="@+id/filter_author_child" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Child-entered"/>
    <CheckBox android:id="@+id/filter_author_parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Parent-entered"/>

    <Button
        android:id="@+id/button_apply_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Apply"/>
</LinearLayout>
