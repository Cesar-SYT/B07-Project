<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- 类型图标（可选：Rescue/Controller） -->
    <View
        android:id="@+id/colorDot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/circle_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 时间戳 -->
    <TextView
        android:id="@+id/logTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/colorDot"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 类型 Rescue/Controller -->
    <TextView
        android:id="@+id/logType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rescue"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/logTime"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/logTime"/>

    <!-- 剂量 -->
    <TextView
        android:id="@+id/logDose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 puffs"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/logTime"/>

</androidx.constraintlayout.widget.ConstraintLayout>
